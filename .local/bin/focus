#!/bin/bash
# Script to enable, disable focus mode
# Focus mode includes followings:
# * No dunst notifications
# * Compositor disabled, no transparancy
# * No gaps
# * Hidden dwm bar

help() {
    echo "Focus Mode"
    echo "   toggle:    FOCUS"
    echo "   start:     FOCUS on"
    echo "   stop:      FOCUS off"
    exit
}

focus_flag="/tmp/focus.on"

togglefocus() {
    if [[ -f $focus_flag ]]; then
        stopfocus
    else
        startfocus
    fi
}

stopfocus() {
    comp on
    dunstctl set-paused false
    xdotool key Super+a
    xdotool key Super+b
    rm -f $focus_flag
}

startfocus() {
    comp off
    dunstctl set-paused true
    xdotool key Super+a
    xdotool key Super+b
    touch $focus_flag
}

case "$1" in
    "")    togglefocus; exit ;;
    "on")  startfocus; exit ;;
    "off") stopfocus; exit ;;
    *)     help ;;
esac
