#!/bin/sh

filename="note-$(date +%Y-%m-%d).md"
noteFilename="${VIMWIKI_DIR_WORK}/wiki/${filename}"

if [ ! -f $noteFilename ]; then
  echo "# Notes for $(date +%Y-%m-%d)" > $noteFilename
fi

nvim -c "norm Go" \
  -c "norm Go## $(date +%H:%M)" \
  -c "norm G2o" \
  -c "norm zz" \
  -c "startinsert" $noteFilename
